    <div class="container">
        <div class="row">
            <div class="col-md-10 ml-md-auto">
                <div class="card bg-light mb-3 mt-5" style="width: 800px">
                    <div class="card-body">
                        <div class="card-header mb-3">Postuler maintenant!</div>
                        {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                        
                                {{ form_label(form.nom, "Nom:") }}
                                {{ form_widget(form.nom) }}
                                
                                {{ form_label(form.prenom, "Prenom:") }}
                                {{ form_widget(form.prenom) }}
                                
                                {{ form_label(form.sexe, "Votre sexe:") }}
                                {{ form_widget(form.sexe) }}

                                {{ form_label(form.email, "Email:") }}
                                {{ form_widget(form.email) }} 

                                {{ form_label(form.num, "Numéro de téléphone:") }}
                                {{ form_widget(form.num) }}

                                {{ form_label(form.date_naiss, "Date de naissance:") }}
                                {{ form_widget(form.date_naiss) }}

                                {{ form_label(form.diplome, "Choisir votre diplome:") }}
                                {{ form_widget(form.diplome) }}

                                {{ form_label(form.status, "Choisir votre position:") }}
                                {{ form_widget(form.status) }}

                                {{ form_label(form.cv, "Télécharger votre CV (PDF file):") }}
                                {{ form_widget(form.cv) }}
                                
                        <div class="form-group">
                            <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-btn fa-user"></i>
                                    {{ button_label|default('Enregistrer') }}
                                </button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

