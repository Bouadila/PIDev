{% extends 'baseBack.html.twig' %}

{% block title %}Les comptes des employeurs {% endblock %}

{% block body %}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Les comptes des employeurs</h4>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>Nom </th>
                        <th>Prénom</th>
                        <th>Mdp</th>
                        <th>Email</th>
                        <th>Nom entrep</th>
                        <th>Etat</th>
                        <th>Adresse</th>
                        <th>logo </th>
                        <th>Sécteur</th>

                    </tr>
                    </thead>
                    {% for employeur in employeur  %}
                    <tbody>
                    <tr>
                        <td>{{employeur.nom}}</td>
                        <td>{{employeur.prenom}}</td>
                        <td>{{employeur.email}}</td>
                        <td>{{employeur.NomEntreprise}}</td>
                        <td>{{employeur.mdp}}</td>
                        {% if employeur.etat == "0" %}
                            <td>compte activé</td>
                        {% else %}
                            <td>compte déactivé</td>
                        {% endif %}
                        <td>{{employeur.AdresseEntreprise}}</td>
                        <td>{{employeur.logo}}</td>
                        <td>{{employeur.secteur}}</td>
                    </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}