{% extends 'base.html.twig' %}

{% block title %}Votre demande{% endblock %}

{% block body %}
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Votre demande  {{ demande.TitreDemande }} </h4>
                        <p class="card-description">
                            voir details
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Titre</th>
                                    <th>Domaine</th>
                                    <th>Statut</th>
                                    <th>Description</th>
                                    <th>PDF</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td class="py-1">
                                        <img src="{{ asset('../../images/faces/face1.jpg') }}" alt="image"/>
                                    </td>
                                    <td>
                                        {{ demande.TitreDemande }}
                                    </td>
                                    <td>
                                        {{ demande.domaineTravail }}
                                    </td>
                                    <td>
                                        {{ demande.statutCand }}
                                    </td>
                                    <td>
                                        {{ demande.description }}
                                    </td>
                                    <td>
                                        <a class="btn btn-success" href="{{ path('listdem' , {'id': demande.id}) }}"  >Pdf</a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <a class="btn btn-success" href="{{ path('list_demande_emploi') }}">Retour</a>
                </div>
            </div>
{% endblock %}