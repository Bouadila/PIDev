
{% extends 'base.html.twig' %}

{% block title %}Affichage de Reclamation{% endblock %}

{% block body %}

    <div class="page-heading contact-heading header-text"
         style="background-image: url({{ asset('assets/images/heading-4-1920x500.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h2>Réclamation</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Type</th>
                <th>Date</th>
                <th>Status</th>
{#                <th>Suppression</th>#}
            </tr>
            </thead>
            <tbody>
            {% for i in list %}
                <tr>
                    <td>
                        {{ i.Title }} &nbsp;&nbsp;
                    </td>
                    <td>
                        {{ i.DescriptionReclamation }} &nbsp;&nbsp;
                    </td>
                    <td>
                        {{ i.Type }} &nbsp;
                    </td>
                    <td>
                        {{ i.DateReclamation }} &nbsp;&nbsp;
                    </td>
                    <td>
                        <a href="{{ path('approve',{'id':i.id}) }}" >Résolu</a>
                        <a>/</a>
                        <a href="{{ path('disapprove',{'id':i.id}) }}" >Non Résolu</a>
                    </td>
                    {#<td>
                        <a href="{{ path('delete_back_reclamation', {'id': i.id}) }}" title="Delete"><i></i>Supprimer</a>
                        &nbsp;
                    </td>#}
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {#<div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>#}
    </div>
{% endblock %}
