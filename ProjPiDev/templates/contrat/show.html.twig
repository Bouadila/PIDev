{% extends 'base.html.twig' %}

{% block title %}Contrat{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="page-heading contact-heading header-text" style="background-image: url({{asset('assets/images/heading-4-1920x500.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4>Recrutini</h4>
                        <h2> Contrat d'emploi Détails</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->
<div class="container">
    <div class=" text-center mt-5 ">
        <h2>{{ contrat.type }}</h2>
    </div>
    <table class="table">
        <tbody>
        <tr scope="row">
            <th scope="col">Description</th>
            <td scope="col">{{ contrat.description }}</td>
        </tr>
        <tr scope="row">
            <th scope="col">Type</th>
            <td scope="col">{{ contrat.type }}</td>
        </tr>
        <tr scope="row">
            <td scope="col"><a href="{{ path('contrat_index') }}" class="btn btn-danger backBtn btn-lg pull-left">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Retourner à la list
                </a>
            </td>
            <td scope="col">
                <a href="{{ path('contrat_edit', {'id': contrat.id}) }}" class="btn btn-danger backBtn btn-lg pull-left">
                    <i class="fa fa-pencil" aria-hidden="true"></i> Modifir
                </a>
            </td>
        </tr>
        <tr scope="row">
            <td scope="col">
                {{ include('contrat/_delete_form.html.twig') }}
            </td>
        </tr>
        </tbody>
    </table>
</div>
{% endblock %}
