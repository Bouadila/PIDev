<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-heading">
            </div>
        </div>
        <div class="col-md-8">
            <div class="contact-form">
                {{ form_start(form ,{attr: {novalidate: 'novalidate'}}) }}
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.type, {'attr': {'class': 'form-control','placeholder': "Type du contrat"}})}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.description, {'attr': {'class': 'form-control','placeholder': "Description du contrat"}})}}
                    </fieldset>
                </div>
                <div class="row">
                    <button id="form-submit" class="filled-button " style="margin: auto;width: 50%;border: 3px solid;padding: 10px;">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        {{ button_label|default('Enregistrer')}}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>





