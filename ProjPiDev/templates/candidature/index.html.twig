{% extends 'base.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="page-heading contact-heading header-text" style="background-image: url({{asset('assets/images/heading-4-1920x500.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4>Recrutini</h4>
                        <h2>Planification rendez vous</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->
    <br>
    <br>
    <br>

    <div class="col-lg-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Table des candidatures</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr class="table-danger">
                            <th>DatePostuler</th>
                            <th scope="col">NoteQuiz</th>
                            <th scope="col"> Candidat</th>
                            <th scope="col"> Offre</th>
                            <th scope="col">Actions</th>

                        </tr>
                        </thead>
                        <tbody>
                        {% for candidature in candidatures %}
                            <tr >
                                <td>{{ candidature.datePostuler ? candidature.datePostuler|date('Y-m-d') : '' }}</td>
                                <td>{{ candidature.noteQuiz }} </td>
                                <td>{{ candidature.candidat.nom}} {{ candidature.candidat.prenom }}</td>
                                <td>{{ candidature.offre.post }}</td>
                                <td>
                                    <a href="{{ path('candidature_show', {'id': candidature.id}) }}" class="text-danger">
                                        <i class="fa fa-plus" aria-hidden="true"></i> planifier rendez vous
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        {# <tfoot>
                        <tr>
                            <td colspan = "8" class="text-danger">{{ knp_pagination_render(offres) }}</td>
                        </tr>
                        </tfoot> #}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
