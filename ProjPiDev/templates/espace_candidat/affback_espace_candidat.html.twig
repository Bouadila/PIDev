{% extends 'baseBack.html.twig' %}

{% block title %}Les comptes des candidats {% endblock %}

{% block body %}

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Table des utilisateurs </h4>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>mail</th>
                        <th>Date nais</th>
{#                        <th>mdp</th>#}
                        <th>Etat</th>
                        <th>Ville</th>
                        <th>nom entreprise </th>
                        <th>Spécialité</th>
{#                        <th>Diplome</th>#}

                    </tr>
                    </thead>
                    {% for user in user  %}

                    <tbody>
                    <tr>
                        <td>{{user.name}}</td>
                        <td>{{user.prenom}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.DateNaiss|date('Y-m-d')}}</td>
{#                        <td>{{candidat.mdp}}</td>#}
                       {% if user.etat == "0" %}
                        <td>compte activé</td>
                        {% else %}
                        <td>compte déactivé</td>
                        {% endif %}
                        <td>{{user.gover}}</td>
{#                        <td>{{candidat.num}}</td>#}
{#                        <td>{{user.roles}}</td>#}
                        <td>{{user.NomEntre}}</td>

                        <td>{{user.special}}</td>
{#                        <td>{{candidat.diplome}}</td>#}
                    </tr>



                                    </tbody>
                    {% endfor %}

                    <a class="btn btn-success" href="{{ path('listo') }}">Create pdf</a>

                </table>
            </div>
        </div>
    </div>

{% endblock %}
