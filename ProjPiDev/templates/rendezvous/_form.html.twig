{#
{{ form_start(form) }}
{{ form_widget(form) }}
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
#}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="section-heading">
            </div>
        </div>
        <div class="col-md-8">
            <div class="contact-form">
                {{ form_start(form ,{attr: {novalidate: 'novalidate'}}) }}
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.titre, {'attr': {'class': 'form-control','placeholder': "Titre de rendez vous"}})}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.start)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.end)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.description, {'attr': {'class': 'form-control','placeholder': "Description"}})}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.all_day)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.background_color)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.border_color)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.text_color)}}
                    </fieldset>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <fieldset>
                        {{ form_row(form.candidature)}}
                    </fieldset>
                </div>
                <div class="row">
                    <button id="form-submit" class="filled-button " style="margin: auto;width: 50%;border: 3px solid;padding: 10px;">
                        <i class="fa fa-check" aria-hidden="true"></i>
                        {{ button_label|default('Enregistrer')}}
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>