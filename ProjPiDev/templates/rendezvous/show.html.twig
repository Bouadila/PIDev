{% extends 'base.html.twig' %}

{% block title %}Rendezvous{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="page-heading contact-heading header-text" style="background-image: url({{asset('assets/images/heading-4-1920x500.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4>Recrutini</h4>
                        <h2> Détail du Rendez-Vous </h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Banner Ends Here -->
<div class="container">
    <div class=" text-center mt-5 ">
        <h2>{{ rendezvou.titre }}</h2>
    </div>
    <table class="table">
        <tbody>
        <tr>
            <th>Titre</th>
            <td>{{ rendezvou.titre }}</td>
        </tr>
        <tr>
            <th>Start</th>
            <td>{{ rendezvou.start ? rendezvou.start|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>End</th>
            <td>{{ rendezvou.end ? rendezvou.end|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ rendezvou.description }}</td>
        </tr>
        <tr>
            <th>Background_color</th>
            <td>{{ rendezvou.backgroundColor }}</td>
        </tr>
        <tr>
            <th>Border_color</th>
            <td>{{ rendezvou.borderColor }}</td>
        </tr>
        <tr>
            <th>Text_color</th>
            <td>{{ rendezvou.textColor }}</td>
        </tr>

        <tr>
            <td scope="col"><a href="{{ path('rendezvous_index') }}" class="btn btn-danger backBtn btn-lg pull-left">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Retourner à la list
                </a>
            </td>
            <td>
            <a href="{{ path('rendezvous_edit', {'id': rendezvou.id}) }}" class="btn btn-danger backBtn btn-lg pull-left">
                <i class="fa fa-pencil" aria-hidden="true"></i> Modifir
            </a>
            </td>
        </tr>
        <tr scope="row">
            <td scope="col">
                {{ include('rendezvous/_delete_form.html.twig') }}
            </td>
        </tr>
        </tbody>
    </table>

</div>
{% endblock %}
