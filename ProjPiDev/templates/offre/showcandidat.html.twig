{% extends 'base.html.twig' %}

{% block title %}Offre{% endblock %}

{% block body %}
    <div class="container">
        <div class=" text-center mt-5 ">
            <h2>Offre {{ offre.post }}</h2>
        </div>
        <table class="table">
            <tbody>
            <tr scope="row">
                <th scope="col">Post</th>
                <td scope="col">{{ offre.post }}</td>
            </tr>
            <tr scope="row">
                <th scope="col">Objectif</th>
                <td scope="col">{{ offre.objectif }}</td>
            </tr>
            <tr scope="row">
                <th scope="col">Description</th>
                <td scope="col">{{ offre.description }}</td>
            </tr>
            <tr scope="row">
                <th scope="col">Experience</th>
                <td scope="col">{{ offre.experience }} ans</td>
            </tr>
            <tr scope="row">
                <th scope="col">Salaire</th>
                <td scope="col">{{ offre.salaire }} DT</td>
            </tr>
            <tr scope="row">
                <th scope="col">Nombre de Place</th>
                <td scope="col">{{ offre.nombrePlace }} Personnes</td>
            </tr>
            <tr scope="row">
                <th scope="col">Contrat</th>
                <td scope="col">{{ offre.contrat.type }}</td>
            </tr>
            <tr scope="row">
                <th scope="col">Date Depot</th>
                <td scope="col">{{ offre.dateDepo ? offre.dateDepo|date('Y-m-d') : '' }}</td>
            </tr>
            <tr scope="row">
                <th scope="col">Date Expiration</th>
                <td scope="col">{{ offre.dateExpiration ? offre.dateExpiration|date('Y-m-d') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="col-md-6">
            <a href="{{ path('index_candidat') }}" class="btn btn-info backBtn btn-lg pull-left">
                <i class="fa fa-backward" aria-hidden="true"></i>
                Retourner Ã  la list
            </a>
        </div>
    </div>
{% endblock %}
