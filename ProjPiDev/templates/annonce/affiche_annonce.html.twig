{% extends 'base.html.twig' %}

{% block title %}Annonce Presse{% endblock %}

{% block body %}

    <div class="page-heading contact-heading header-text"
         style="background-image: url({{ asset('assets/images/heading-4-1920x500.jpg') }});">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h2>Annonce Presse</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <a class="filled-button" href="{{ path('annonce') }}">Retour</a>
                <h4 align="center">{{ annonce.nom }}</h4>
                    <h4 align="center">{{ annonce.origine }}</h4>
                <br>
                <img src="{{ asset('picture/' ~ annonce.img) }}" alt="image" width="1215" height="1754"/>
                <br>
                <br>
                <div class="col-md-8">
                    <div class="contact-form">
                        <form {{ form_start(formComm) }}
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    {{ form_widget(formComm.Description) }}
                                </fieldset>
                            </div>
                            <br>
                            <br>
                            <td>
                                {{ form_widget(formComm.Post) }}
                            </td>
                        </div>
                        </form {{ form_end(formComm) }}
                        {% for i in comments %}
                            <br>
                            <h4>{{ i.Description }}</h4>
                            <p>{{ i.TimeStamp }}</p>
                            <p>Likes : {{ i.NbrReac }}</p>
                            <a class="filled-button" href="{{ path('like',{'id':i.id}) }}" >Like</a>
                            <a class="filled-button" href="{{ path('dislike',{'id':i.id}) }}" >Dislike</a>
                            <a class="filled-button" href="{{ path('delete', {'id': i.id}) }}">Delete</a>
                            <hr>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}