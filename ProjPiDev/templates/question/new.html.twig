{% extends 'base.html.twig' %}

{% block title %}New Question{% endblock %}

{% block body %}
    <h1>Create new Question</h1>
    {{ form_start(form) }}
    {{ form_row(form.contenu_ques) }}

    <h3>Reponses</h3>
    <ul class="reponses" data-prototype="{{ form_widget(form.reponses.vars.prototype)|e('html_attr') }}"></ul>
    <td><a  data-collection-holder-class="reponses" class="btn btn-info add_item_link" ><i class="fa fa-plus" aria-hidden="true"></i>Ajouter une reponse</a></td><br/>

    {% for rep in form.reponses %}
        <li>{{ form_row(rep.contenu_rep) }}</li>

        {% endfor %}
    </ul>

    <button class="btn">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}
    <script>

        jQuery(document).ready(function() {
            $collectionHolder = $('ul.reponses');
            $collectionHolder.find('li').each(function() {
                addTagFormDeleteLink($(this));
            });
            var $tagsCollectionHolder = $('ul.reponses');
            $tagsCollectionHolder.data('index', $tagsCollectionHolder.find('input').length);
            $('body').on('click', '.add_item_link', function(e) {
                var $collectionHolderClass = $(e.currentTarget).data('collectionHolderClass');
                addFormToCollection($collectionHolderClass);
                $('#question_nomb_rep').val($('#question_nomb_rep').val()-1+2);
            })
        });
        function addFormToCollection($collectionHolderClass) {
            var $collectionHolder = $('.' + $collectionHolderClass);
            var prototype = $collectionHolder.data('prototype');
            var index = $collectionHolder.data('index');

            var newForm = prototype;
            newForm = newForm.replace(/__name__/g, index);
            $collectionHolder.data('index', index + 1);
            var $newFormLi = $('<li></li>').append(newForm);
            $collectionHolder.append($newFormLi);
            // let $removeFormButton = $('<li> <input type="radio"  name="gender" >definir le reponse juste</li><br/>');
            // $newFormLi.append($removeFormButton);
            addTagFormDeleteLink($newFormLi);

        }
        function addTagFormDeleteLink($tagFormLi) {

            var $removeFormButton = $('<td><a class="btn btn-info" ><i class="fa fa-minus-circle" aria-hidden="true"></i>Suprimer cette reponse</a></td><br/><br/>\n');
            $tagFormLi.append($removeFormButton);

            $removeFormButton.on('click', function(e) {
                $('#question_nomb_rep').val($('#question_nomb_rep').val()-1);
                $tagFormLi.remove();
            });
        }


    </script>

{% endblock %}
