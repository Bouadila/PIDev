{% extends 'base.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    
<!-- Page Content -->
<div class="page-heading contact-heading header-text" style="background-image: url({{asset('assets/images/heading-4-1920x500.jpg') }});">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="text-content">
					<h4>Recrutini</h4>
					<h2>votre reponses 
					</h2><br/>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Banner Ends Here -->

<div class="container">
    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ quiz.id }}</td>
        </tr>
        {% for reponse in quiz.reponses %}
        <tr>
            <th>question</th>
            <td>{{ reponse.question.ContenuQues }}</td>

        </tr>
        <tr>
            <th>Reponse condidat </th>
            {% if reponse.reponse is null %}
                <td >majawebsh<i style="font-size: 150%; color:red" class="fa fa-times-circle-o"S aria-hidden="true"></i></td>

            {% elseif  reponse.reponse == reponse.question.repjust %}
                <td >{{ reponse.reponse.contenuRep }}<i style="font-size: 150%; color:limegreen" class="fa fa-check-circle-o" aria-hidden="true"></i></td>
            {% else %}
                <td >{{ reponse.reponse.contenuRep }}<i style="font-size: 150%; color:red" class="fa fa-times-circle-o"S aria-hidden="true"></i></td>
            {% endif %}
        </tr>
        {% endfor %}
        <tr>
            <th>Score</th>
            <td></td>
        </tr>
        </tbody>
    </table>
</div>

{% endblock %}
