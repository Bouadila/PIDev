{% extends 'baseBack.html.twig' %}

{% block title %}Candidature index{% endblock %}

{% block body %}

    <form method="GET" action="/searchback">
  <select name="order">
    <option {{ order is same as('newer') ? 'selected' : '' }}>newer</option>
    <option {{ order is same as('older') ? 'selected' : '' }}>older</option>
  </select>

  <input type="text" name="query" value="{{ query }}" placeholder="Search"/>
</form>

    <h1>Candidature index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_candidat</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Sexe</th>
                <th>Email</th>
                <th>Date_naiss</th>
                <th>Num</th>
                <th>Status</th>
                <th>Diplome</th>
                <th>Date_cand</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td>{{ result.idCandidat }}</td>
                <td>{{ result.nom }}</td>
                <td>{{ result.prenom }}</td>
                <td>{{ result.sexe }}</td>
                <td>{{ result.email }}</td>
                <td>{{ result.dateNaiss ? result.dateNaiss|date('Y-m-d') : '' }}</td>
                <td>{{ result.num }}</td>
                <td>{{ result.status }}</td>
                <td>{{ result.diplome }}</td>
                <td>{{ result.DateCandidature ? result.DateCandidature|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                <a href="{{ path('candidatureback_show', {'id': result.id}) }}">show</a>
                <a href="{{ path('candidatureback_edit', {'id': result.id}) }}">edit</a>
                </td>
            </tr>
            
        {% else %}
            <tr>
                <td colspan="12">Aucun candidature trouvÃ©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('candidatureback_new') }}">Create new</a>

{% endblock %}



